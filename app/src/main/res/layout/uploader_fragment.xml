<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.main.UploaderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@color/uploader_header">

        <TextView
            android:id="@+id/processLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/processing_uploads"
            android:textSize="16sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/countComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/processing_uploads"
            android:textSize="16sp"
            android:layout_toEndOf="@id/processLabel"
            android:textColor="@color/cyan"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            tools:text="1"
            />

        <TextView
            android:id="@+id/sep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_slash"
            android:textSize="16sp"
            android:textColor="@color/cyan"
            android:layout_toEndOf="@id/countComplete"
            />

        <TextView
            android:id="@+id/countTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toEndOf="@id/sep"
            android:textColor="@color/dark_cyan"
            tools:text="4"
            />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical" />

</LinearLayout>
